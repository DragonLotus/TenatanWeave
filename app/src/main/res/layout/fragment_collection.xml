<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.collection.CollectionFragment">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/collection_set_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/collection_search"
            app:layout_constraintStart_toStartOf="parent"/>

    <com.phi.tenatanweave.customviews.EmptySearchView
            android:id="@+id/collection_search"
            android:icon="@android:drawable/ic_menu_search"
            app:showAsAction="ifRoom"
            android:background="?android:attr/windowBackground"
            app:defaultQueryHint="@string/title_search"
            app:iconifiedByDefault="false"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layoutDirection="rtl"
            app:actionViewClass="androidx.appcompat.widget.SearchView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>