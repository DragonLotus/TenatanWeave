<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/printings_text_view"
            style="@style/BottomSheetItem"
            android:drawableStart="@android:drawable/ic_menu_edit"
            android:text="@string/card_options_printings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/details_text_view"
            style="@style/BottomSheetItem"
            android:drawableStart="@android:drawable/ic_menu_view"
            android:text="@string/card_options_details"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/printings_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>