<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/set_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:clipToPadding="false"
        android:clipChildren="false"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true">

    <TextView
            android:id="@+id/set_child_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/heading_1"
            android:textStyle="bold"
            android:maxLines="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/set_child_card_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/body_2"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/set_child_name"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/set_child_release_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/body_2"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/set_child_name"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>